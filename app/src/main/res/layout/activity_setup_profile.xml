<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetStartWithNavigation="0dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                android:tint="@color/text_primary"/>
        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:text="Lengkapi Profil"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Lengkapi data diri Anda untuk melanjutkan"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Profile Photo -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_user_placeholder"/>

        <TextView
            android:text="Ubah Foto Profil"
            android:textColor="@color/primary"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Nama Lengkap -->
        <EditText
            android:id="@+id/etFullName"
            android:hint="Nama Lengkap"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Jenis Kelamin -->
        <Spinner
            android:id="@+id/spGender"
            android:background="@drawable/bg_input"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Tempat Lahir -->
        <EditText
            android:id="@+id/etBirthPlace"
            android:hint="Tempat Lahir"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Tanggal Lahir -->
        <EditText
            android:id="@+id/etBirthDate"
            android:hint="Tanggal Lahir (DD/MM/YYYY)"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Alamat -->
        <EditText
            android:id="@+id/etAddress"
            android:hint="Alamat"
            android:minLines="2"
            android:gravity="top"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Hobi -->
        <EditText
            android:id="@+id/etHobby"
            android:hint="Hobi"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Bio -->
        <EditText
            android:id="@+id/etBio"
            android:hint="Bio singkat"
            android:minLines="3"
            android:gravity="top"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Button -->
        <Button
            android:id="@+id/btnSave"
            android:text="Simpan &amp; Lanjutkan"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_primary"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>

    </LinearLayout>
</ScrollView>
